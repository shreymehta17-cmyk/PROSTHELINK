generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  SUPPLIER
  DOCTOR
}

enum RequestStatus {
  OPEN
  CLOSED
  CANCELLED
}

enum QuoteStatus {
  SUBMITTED
  ACCEPTED
  REJECTED
  WITHDRAWN
}

enum OrderStatus {
  CREATED
  PAYMENT_PENDING
  PAID
  IN_PRODUCTION
  SHIPPED
  OUT_FOR_DELIVERY
  DELIVERED
  COMPLETED
  CANCELLED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  role         Role
  passwordHash String?
  createdAt    DateTime @default(now())

  requests  ProsthesisRequest[] @relation("PatientRequests")
  quotes    Quote[]            @relation("SupplierQuotes")
  messages  Message[]
  notifs    Notification[]
}

model ProsthesisRequest {
  id            String        @id @default(cuid())
  patientId     String
  patient       User          @relation("PatientRequests", fields: [patientId], references: [id])

  title         String
  prosthesisType String
  bodySide      String?
  level         String?
  activityLevel String?
  notes         String?
  measurements  Json

  status        RequestStatus @default(OPEN)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  quotes        Quote[]
  messages      Message[]
  order         Order?
}

model Quote {
  id            String      @id @default(cuid())
  requestId     String
  request       ProsthesisRequest @relation(fields: [requestId], references: [id])

  supplierId    String
  supplier      User        @relation("SupplierQuotes", fields: [supplierId], references: [id])

  priceCents     Int
  currency       String     @default("usd")
  leadTimeDays   Int
  warrantyMonths Int
  materials      String?
  inclusions     String?
  notes          String?
  status         QuoteStatus @default(SUBMITTED)

  createdAt     DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  requestId String
  request   ProsthesisRequest @relation(fields: [requestId], references: [id])

  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])

  text      String
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  type      String
  payload   Json
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Order {
  id           String      @id @default(cuid())
  requestId    String      @unique
  request      ProsthesisRequest @relation(fields: [requestId], references: [id])

  supplierId   String
  supplier     User        @relation(fields: [supplierId], references: [id])

  quoteId      String
  quote        Quote       @relation(fields: [quoteId], references: [id])

  status       OrderStatus @default(CREATED)
  trackingJson Json        @default("[]")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
